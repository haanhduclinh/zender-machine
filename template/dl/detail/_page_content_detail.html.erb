  <div id="page-content" class="single-page container">
    <div class="row">
      <div id="main-content" class="col-md-8">
        <div class="box">
          <div class="wrap-vid">
            <img src='<%= @data.post[:thumbnail] %>' height='400px' width: '100%' style='padding-bottom: 20px'>
          </div>
          <div class="line"></div>
          <h1 class="vid-name"><a href="#"><%= @data.post[:title] %></a></h1>
          <div class="info">
            <h5>By <a href="<%= @data.post[:author_url] %>"><%= @data.post[:author] %></a></h5>
            <span><i class="fa fa-calendar"></i><%= @data.post[:public_date] %></span>
            <span><i class="fa fa-heart"></i>1,200</span>
          </div>
          <p style="margin-top: 20px">
            <% if @data.post[:thumbnail]%>
              <img src='<%= @data.post[:thumbnail]%>' title='<%= @data.post[:title] %>' alt='<%= @data.post[:title] %>' >
            <% end %>
            <%= @data.post[:content] %>
          </p>
          <div class="vid-tags">
            <% @data.post[:tags].each do |tag| %>
              <a href="#"><%= tag %></a>
            <% end %>
          </div>
          <div class="line"></div>
        </div>

        <div class="box">
          <div class="box-header header-natural">
            <h2>RELATED</h2>
          </div>
          <div class="box-content">
            <div class="row">
              <% @data.post[:right_related].each do |p| %>
                <div class="col-md-4">
                  <div class="wrap-vid">
                    <div class="zoom-container">
                      <div class="zoom-caption">
                        <a href="<%= p[:url] %>">
                          <i class="fa fa-play-circle-o fa-5x" style="color: #fff"></i>
                        </a>
                        <p><%= p[:name] %></p>
                      </div>
                      <% if p[:thumbnail] %>
                        <%= p[:thumbnail] %>
                      <% else %>
                        <img src="images/2.jpg" />
                      <% end %>
                    </div>
                    <h3 class="vid-name"><a href="#"><%= p[:name] %></a></h3>
                    <div class="info">
                      <span><i class="fa fa-calendar"></i><%= p[:post_date].strftime("%d %b %Y") %></span>
                      <span><i class="fa fa-heart"></i><%= rand(1..1000) %></span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
